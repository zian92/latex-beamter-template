% Block that does not breaks over a page
\newenvironment<>{solidblock}[1]{%
	\setbeamercolor{block title}{}%
	\begin{minipage}{\textwidth}
		\begin{block}#2{#1}}
		{\end{block}
	\end{minipage}
}

\newenvironment<>{redblock}[1]{%
	\setbeamercolor{block title}{fg=white,bg=red!75!black}%
	\begin{block}#2{#1}}
	{\end{block}
}

